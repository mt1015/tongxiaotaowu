<!--pages/release/release.wxml-->
<view class="release">
<form class="submit" bindsubmit="formSubmit">
    <!-- 选择物品分类 -->
    <view class="section">
      <picker name="category" bindchange="bindPickerChange" value="{{index}}" range="{{array}}" style="width: 90%;">
        <view class="picker">
          <label class="label">{{array[index]}}</label>
        </view>
      </picker>
      <view class="more">></view>
    </view>
    <!-- 输入物品名称 -->
    <view class="input">
      <input type="text" name="name" placeholder="物品名称" maxlength="30" focus="ture"/>
    </view>
    <!-- 输入物品价格 -->
    <view class="price">
      <input name="price" type="number" placeholder="请输入物品价格（元）"/>
    </view>
    <!-- 联系方式 -->
    <view class="input">
      <input name="tel" maxlength="11" placeholder="请输入联系方式"/>
    </view>
    <!-- 输入物品详细说明 -->
    <view class="explain">
      <textarea name="explain" cols="30" rows="10" placeholder="请输入详细的物品说明"></textarea>
    </view>

    <!-- 图片上传 -->
    <view class="uploadImgbox">
      <view>
        <view class='eachImgbox' wx:for="{{imgs}}" wx:for-item="item" wx:key="*this">
          <image class='eachImg' src="{{item}}" data-index="{{index}}" mode="aspectFill" bindtap="previewImg">
            <icon type='cancel' class="delete_btn" data-index="{{index}}" catchtap="deleteImg"></icon>
          </image>
        </view>
      </view>
    </view>
    <button class="upimg_btn" bindtap="chooseImg" wx:if="{{imgs==''}}">拍照 / 上传</button>
    <!-- 发送按钮 -->
    <text>\n</text>
    <button form-type="submit">确定</button>
</form>
<text>\n</text>
<text>\n</text>
</view>

