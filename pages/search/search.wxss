.search{
  /* margin-bottom: 20rpx; */
  padding: 20rpx;
  display: flex;
  flex-wrap: nowrap;
}
.search_input{
  /* width: 247px; */
  width: 3000rpx;
  height: 60rpx;
  background-color: #fff;
  border: 1rpx solid #ccc;
}

.search_btn{
  width: 120rpx;
  height: 72rpx;
  justify-items: center;
  align-content: center;
  font-size: 26rpx;
  /* background-color: rgb(247, 239, 239); */
}

.search_content{
  margin-top: 30rpx;
}
.search_item{
  background-color: #fff;
  font-size: 26rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.search_result .empty{
  text-align: center;
  color: #f00;
  font-size: 15px;
}
 
.search_result .noresult{
  text-align: center;
  color: #666;
  font-size: 15px;
}