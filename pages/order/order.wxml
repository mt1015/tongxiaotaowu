<!--pages/order/order.wxml-->
<view wx:if="{{openid!=''}}">
<view class="goods_life">
  <view class="tab">
    <view class="{{1 == currentIndex ? 'title-sel-selected' : 'title-sel'}}" bindtap='titleClick' data-idx='1'>
    <text>待确认</text>
    <hr class="line-style"/>
    </view>  
    <view class="{{2 == currentIndex ? 'title-sel-selected' : 'title-sel'}}" bindtap='titleClick' data-idx='2'>
      <text>已购买</text>
      <hr class="line-style"/>
    </view>
  </view>
  



 <view class="my_fabu">
  <view class="goods"  
  wx:for="{{GoodsList}}"
  wx:key="index"
  >
  <navigator bindtap="skipTravelDetails" data-id="{{item.goods_id}}" data-index="{{currentIndex}}" class="box_item" url="">
  <!-- <navigator url="{{goods_url}}"> -->
    <view class="left_box">
      <image src="{{item.order_img}}"></image>
    </view>
    <view class="right_box">
      <label class="title" for="">{{item.order_name}}</label>
      <!-- <text>\n</text> -->
      <view class="right_price">
        <label class="price" for="">￥{{item.order_price}}</label>
      </view>
    </view>
    
  </navigator>
  
  <text class="off" wx:if="{{currentIndex==2}}" style="width:250rpx">商品已购买</text>
  <text class="off" wx:if="{{currentIndex==1}}" style="width:250rpx">待卖家确认</text>

 </view>
  
 </view>
</view>
</view>

